<style>
  main {
    position: relative;
  }
  
  .section-divider {
    max-width: var(--container-max);
    margin: 0 auto;
    padding: 0 var(--container-padding);
  }
  
  .section-divider::after {
    content: '';
    display: block;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--color-border), transparent);
  }
</style>

