---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Hero from '../components/Hero.astro';
import Problem from '../components/Problem.astro';
import Technology from '../components/Technology.astro';
import Roadmap from '../components/Roadmap.astro';
import Audience from '../components/Audience.astro';
import Pricing from '../components/Pricing.astro';
import Reputation from '../components/Reputation.astro';
import ManifestoSummary from '../components/ManifestoSummary.astro';
import CTA from '../components/CTA.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Human-Only Filter â€” Reclaim Your Internet">
  <Navigation />
  
  <main>
    <Hero />
    
    <div class="section-divider"></div>
    
    <Problem />
    
    <ManifestoSummary />
    
    <Technology />
    
    <div class="section-divider"></div>
    
    <Roadmap />
    
