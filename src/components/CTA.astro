<section id="waitlist" class="section cta">
  <div class="container">
    <div class="cta-card card card-glass slide-up">
      <div class="cta-content">
        <h2>JOIN THE MOVEMENT</h2>
        <p>The internet is broken. Help us fix it.</p>
        
        <form class="cta-form" action="#" method="POST">
          <div class="form-group">
            <input 
              type="email" 
              name="email" 
              placeholder="Enter your email" 
              required 
              class="form-input"
            />
            <button type="submit" class="btn btn-primary">
              Sign Up for Early Access
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </button>
          </div>
          <p class="form-note mono">* Limited spots available for Beta Cohort 1</p>
        </form>
        
        <div class="cta-actions">
          <a href="#" class="btn btn-outline">
            Contact Sales
          </a>
        </div>
      </div>
      
      <div class="cta-decoration">
        <div class="deco-ring deco-ring-1"></div>
        <div class="deco-ring deco-ring-2"></div>
        <div class="deco-glow"></div>
      </div>
    </div>
  </div>
</section>

<style>
  .cta {
    position: relative;
  }
  
  .cta-card {
    position: relative;
    padding: var(--space-4xl) var(--space-2xl);
    text-align: center;
    overflow: hidden;
    border-color: var(--color-primary);
  }
  
  .cta-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(ellipse at center, var(--color-primary-dim), transparent 70%);
    opacity: 0.3;
    pointer-events: none;
  }
  
  .cta-content {
    position: relative;
    z-index: 1;
    max-width: 600px;
    margin: 0 auto;
  }
  
  .cta-content h2 {
    margin-bottom: var(--space-md);
  }
  
  .cta-content > p {
    font-size: 1.125rem;
    margin-bottom: var(--space-2xl);
  }
  
  .cta-form {
    margin-bottom: var(--space-xl);
  }
  
  .form-group {
    display: flex;
    gap: var(--space-md);
    max-width: 500px;
    margin: 0 auto var(--space-md);
  }
  
  .form-input {
    flex: 1;
    padding: var(--space-md) var(--space-lg);
    font-family: var(--font-sans);
    font-size: 0.9375rem;
    color: var(--color-text);
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    outline: none;
    transition: all var(--transition-fast);
  }
  
  .form-input::placeholder {
    color: var(--color-text-dim);
  }
  
  .form-input:focus {
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px var(--color-primary-dim);
  }
  
  .form-group .btn {
    flex-shrink: 0;
    white-space: nowrap;
  }
  
  .form-note {
    font-size: 0.75rem;
    color: var(--color-text-dim);
    margin: 0;
  }
  
  .cta-actions {
    margin-top: var(--space-lg);
  }
  
  .cta-decoration {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }
  
  .deco-ring {
    position: absolute;
    border-radius: 50%;
    border: 1px solid var(--color-border);
    opacity: 0.3;
  }
  
  .deco-ring-1 {
    width: 400px;
    height: 400px;
    top: -200px;
    right: -100px;
  }
  
  .deco-ring-2 {
    width: 300px;
    height: 300px;
    bottom: -150px;
    left: -50px;
  }
  
  .deco-glow {
    position: absolute;
    width: 200px;
    height: 200px;
    background: radial-gradient(circle, var(--color-primary), transparent);
    border-radius: 50%;
    top: -100px;
    left: 50%;
    transform: translateX(-50%);
    opacity: 0.1;
    filter: blur(60px);
  }
  
  @media (max-width: 768px) {
    .cta-card {
      padding: var(--space-2xl) var(--space-lg);
    }
    
    .form-group {
      flex-direction: column;
    }
    
    .form-group .btn {
      width: 100%;
    }
  }
</style>

